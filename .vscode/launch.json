{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug ndscpp",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/ndscpp", // Path to your compiled binary
        "args": [], // Add program arguments here if needed
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb",
        "preLaunchTask": "Build ndscpp", // Run the build task before debugging
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  